{
    "coc.preferences.autoTrigger": "trigger",
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "args": ["--log-file=/tmp/ccls.log"],
            "revealOutputChannelOn": "never",
            "filetypes": ["c", "cpp"],
            "initializationOptions": {
                "cacheDirectory": ".ccls_cache",
                "compilationDatabaseDirectory": "build",
                "completion": {
                  "enableSnippets": false
                },
                "index": {
                  "comments": 2
                }
            }
        }
    }
}


