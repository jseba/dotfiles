source $HOME/.dotfiles/zsh/zgen/zgen.zsh

# Check for init script
if ! zgen saved; then
    echo -n "Creating a zgen save..."

    # Library/Frameworks
    zgen oh-my-zsh

    # Bundles
    zgen loadall << EOPLUGINS
        unixorn/git-extra-commands
        rupa/z
        bric3/nice-exit-code
        psprint/zsh-cmd-architect
EOPLUGINS

    # Theme
    zgen oh-my-zsh themes/mortalscumbag

    zgen save
fi
