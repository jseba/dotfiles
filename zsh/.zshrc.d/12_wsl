# vim: set ft=zsh:

if [ -e /proc/version ]; then
  if grep -q Microsoft /proc/version; then

    # override default umask of WSL
    umask 022

    # WSL can't do auto nicing of background processes yet
    unsetopt bgnice

    # WSL I/O is rather lackluster for git
    export ZSH_THEME_NO_GIT=1

    # X11 forwarding
    export DISPLAY=localhost:0
  fi
fi
